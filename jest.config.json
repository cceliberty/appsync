{
  "testEnvironment": "node",
  "roots": ["<rootDir>/resolvers"],
  "testMatch": ["**/*.test.ts"],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "collectCoverageFrom": ["./resolvers/src/**/*.ts"],
  "coverageDirectory": "./coverage",
  "coverageReporters": ["json-summary", "clover", "json", "html", "lcov", ["text", { "skipFull": true }]],
  "errorOnDeprecated": true,
  "prettierPath": "./node_modules/prettier",
  "verbose": true
}
